# =================================================================
# CONTACT MANAGEMENT MICROSERVICE - CONFIGURATION TEMPLATE
# =================================================================

# Database Configuration
DB_HOST=localhost
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=mejona_contacts
DB_PORT=3306
DB_MAX_IDLE_CONNS=10
DB_MAX_OPEN_CONNS=50
DB_CONN_MAX_LIFETIME=3600
DB_SSL_MODE=false

# JWT Authentication Configuration
JWT_SECRET=change-this-super-secret-jwt-key-minimum-32-characters
JWT_ACCESS_TOKEN_DURATION=24h
JWT_REFRESH_TOKEN_DURATION=168h
JWT_ISSUER=mejona-contact-service

# Server Configuration
PORT=8081
HOST=0.0.0.0
GIN_MODE=release
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s
IDLE_TIMEOUT=60s

# Application Configuration
APP_NAME=Mejona Contact Service
APP_VERSION=1.0.0
APP_ENV=production
APP_DEBUG=false
APP_URL=https://contacts.mejona.com

# Security Configuration
BCRYPT_COST=12
CORS_ALLOWED_ORIGINS=https://admin.mejona.com,https://mejona.com,http://localhost:5173,http://localhost:3000
TRUSTED_PROXIES=127.0.0.1,::1

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_AUTH_REQUESTS_PER_HOUR=20
RATE_LIMIT_USER_REQUESTS_PER_MINUTE=200

# Redis Configuration (for caching and session management)
REDIS_ENABLED=true
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# Email Configuration (for notifications and automated responses)
SMTP_HOST=email-smtp.us-east-1.amazonaws.com
SMTP_PORT=587
SMTP_USERNAME=your-ses-username
SMTP_PASSWORD=your-ses-password
SMTP_FROM_EMAIL=contacts@mejona.com
SMTP_FROM_NAME=Mejona Contact Team

# SMS Configuration (for urgent notifications)
SMS_PROVIDER=twilio
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret
SMS_FROM_NUMBER=+1234567890

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/contact-service.log
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=10
LOG_MAX_AGE=30

# Monitoring and Health Check Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true

# Feature Flags
ENABLE_BULK_OPERATIONS=true
ENABLE_EXPORT_FEATURES=true
ENABLE_ADVANCED_SEARCH=true
ENABLE_LEAD_SCORING=true
ENABLE_AUTO_ASSIGNMENT=true
ENABLE_SWAGGER=true

# Integration Configuration
MAIN_API_URL=http://localhost:8080
ADMIN_DASHBOARD_URL=http://localhost:5173
WEBHOOK_SECRET=contact-webhook-secret-key

# Contact Management Settings
DEFAULT_CONTACT_STATUS=new
AUTO_ASSIGN_ENABLED=true
LEAD_SCORING_ENABLED=true
DUPLICATE_DETECTION_ENABLED=true
RESPONSE_TIME_SLA_HOURS=24

# Cache Configuration
CACHE_ENABLED=true
CACHE_DEFAULT_EXPIRY=5m
CACHE_CLEANUP_INTERVAL=10m

# Timezone Configuration
TZ=Asia/Kolkata
TIME_FORMAT=2006-01-02 15:04:05

# External API Keys (for integrations)
GOOGLE_CALENDAR_API_KEY=
ZOOM_API_KEY=
TEAMS_WEBHOOK_URL=

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# AWS Configuration (for deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key